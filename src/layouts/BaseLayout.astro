---
import "@fontsource-variable/domine";
import "@fontsource/zen-kaku-gothic-new";
import "@fontsource/alice";
import "@fontsource-variable/montserrat";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nuestra boda" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/ayc.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: "Domine Variable", serif;
    background: #ffffff;
  }
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: auto;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  p,
  label {
    font-family: "Zen Kaku Gothic New", sans-serif;
    font-size: clamp(1rem, 2vw + 0.8rem, 1.5rem);
  }

  h2,
  h3 {
    font-family: "Alice";
  }
</style>
